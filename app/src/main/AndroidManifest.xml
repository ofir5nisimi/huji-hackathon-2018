<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nirel.hackathon">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/Group8"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".DiaryActivity" />
        <activity android:name=".PayActivity" />
        <activity android:name=".HelperMainActivity" />
        <activity android:name=".ConsumerLoginActivity" />
        <activity android:name=".VolunteerLoginActivity" />
        <activity android:name=".BreadActivity" />
        <activity android:name=".FruitActivity" />
        <activity android:name=".QrActivity" />
        <activity android:name=".VegetablesActivity" />
        <activity android:name=".HouseBasicsActivity" />
        <activity android:name=".ConsumerMainActivity"></activity>
        <activity android:name=".BasketActivity"></activity>
    </application>

</manifest>