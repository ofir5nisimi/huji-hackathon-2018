<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nirel.hackathon">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".loginActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".BreadActivity"
            android:label="@string/title_activity_bread"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DiaryActivity"
            android:label="@string/title_activity_milk"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FruitActivity"
            android:label="@string/title_activity_fruit" />
        <activity
            android:name=".VegetablesActivity"
            android:label="@string/title_activity_vegetables" />
        <activity
            android:name=".HouseBasicsActivity"
            android:label="@string/title_activity_house_basics" />
        <activity
            android:name=".ExtrasActivity"
            android:label="@string/title_activity_extras"></activity>
    </application>

</manifest>