<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nirel.hackathon.MainActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_background"
        android:layout_width="376dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0.8"
        android:background="@drawable/main_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/volunteer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="65dp"
            android:onClick="volunteer"
            android:text="מתנדב"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="552dp" />

        <Button
            android:id="@+id/consumer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/volunteer_button"
            android:layout_alignEnd="@+id/volunteer_button"
            android:layout_alignRight="@+id/volunteer_button"
            android:layout_marginBottom="20dp"
            android:onClick="consumer"
            android:text="צרכן"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="142dp" />

        <TextView
            android:id="@+id/DropBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp"
            android:text="Drop Buy"
            android:textColor="@android:color/background_dark"
            android:textSize="56sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/social_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/DropBuy"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="סל קניות חברתי"
            android:textSize="46sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
